<Application x:Class="AirportDisplayApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AirportDisplayApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Uygulama düzeyinde stil sözlüklerini buraya ekle -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Styles.xaml referansı - düzeltilmiş yol -->
                <ResourceDictionary Source="/AirportDisplayApp;component/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>